---
import Layout from '@src/layouts/BaseLayout.astro';
import Header from '@src/components/sections/portfolio/Header.astro';
import Projects from '@src/components/sections/portfolio/Projects.astro';
import ContactCTA from '@src/components/sections/shared/ContactCTA.astro';

import expressImg from '@src/assets/web-design/image-express.jpg';
import campImg from '@src/assets/web-design/image-camp.jpg';
import blogrImg from '@src/assets/web-design/image-blogr.jpg';
import photonImg from '@src/assets/web-design/image-photon.jpg';
import builderImg from '@src/assets/web-design/image-builder.jpg';
import transferImg from '@src/assets/web-design/image-transfer.jpg';

const projects = [
    {
        title: 'Express',
        description:
            'A multi-carrier shipping website for ecommerce businesses',
        image: expressImg,
        alt: 'Screenshot of the Express webpage',
    },
    {
        title: 'TRANSFER',
        description:
            'Site for low-cost money transfers and sending money within seconds',
        image: transferImg,
        alt: 'Screenshot of the Transfer webpage',
    },
    {
        title: 'PHOTON',
        description:
            'A state-of-the-art music player with high-resolution audio and DSP effects',
        image: photonImg,
        alt: 'Screenshot of the Photon webpage',
    },
    {
        title: 'BUILDER',
        description:
            'Connects users with local contractors based on their location',
        image: builderImg,
        alt: 'Screenshot of the Builder webpage',
    },
    {
        title: 'BLOGR',
        description:
            'Blogr is a platform for creating an online blog or publication',
        image: blogrImg,
        alt: 'Screenshot of the Blogr webpage',
    },
    {
        title: 'CAMP',
        description:
            'Get expert training in coding, data, design, and digital marketing',
        image: campImg,
        alt: 'Screenshot of the Camp webpage',
    },
];
---

<Layout title="Web Design | by Designo">
    <Header
        title="Web Design"
        body="We build websites that serve as powerful marketing tools and bring memorable brand experiences."
        bg="web"
    />
    <Projects projects={projects} />
    <ContactCTA />
</Layout>
