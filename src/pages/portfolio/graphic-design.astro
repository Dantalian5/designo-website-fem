---
import Layout from '@src/layouts/BaseLayout.astro';
import Header from '@src/components/sections/portfolio/Header.astro';
import Projects from '@src/components/sections/portfolio/Projects.astro';
import Navigation from '@src/components/sections/shared/Navigation.astro';
import ContactCTA from '@src/components/sections/shared/ContactCTA.astro';

import waterImg from '@src/assets/graphic-design/image-boxed-water.jpg';
import changeImg from '@src/assets/graphic-design/image-change.jpg';
import scienceImg from '@src/assets/graphic-design/image-science.jpg';

const projects = [
    {
        title: 'TIM BROWN',
        description:
            'A book cover designed for Tim Brown’s new release, ‘Change’',
        image: changeImg,
        alt: 'Photo of the Tim Brown‘s Change book',
    },
    {
        title: 'BOXED WATER',
        description: 'A simple packaging concept made for Boxed Water',
        image: waterImg,
        alt: 'Photo of a Bottle of Boxed Water',
    },
    {
        title: 'SCIENCE!',
        description:
            'A poster made in collaboration with the Federal Art Project',
        image: scienceImg,
        alt: 'Photo of a Science Poster',
    },
];
---

<Layout title="Graphic Design | by Designo">
    <Header
        title="Graphic Design"
        body="We deliver eye-catching branding materials that are tailored to meet your business objectives."
        bg="web"
    />
    <Projects projects={projects} />
    <Navigation graphicLink={false} />
    <ContactCTA />
</Layout>
