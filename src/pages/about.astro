---
import Layout from '@src/layouts/BaseLayout.astro';
import ContactCTA from '@src/components/sections/shared/ContactCTA.astro';
import { Image } from 'astro:assets';
import Button from '@src/components/commons/Button.astro';
import canadaImg from '@src/assets/shared/illustration-canada.svg';
import australiaImg from '@src/assets/shared/illustration-australia.svg';
import ukImg from '@src/assets/shared/illustration-united-kingdom.svg';

const locations = [
    {
        name: 'Canada',
        img: canadaImg,
        href: '/location',
    },
    {
        name: 'Australia',
        img: australiaImg,
        href: '/location',
    },
    {
        name: 'United Kingdom',
        img: ukImg,
        href: '/location',
    },
];
---

<Layout title="Our Company | by Designo">
    <header class="header box-section bg-leaf">
        <div class="box-section__wrapper about-us bg-primary">
            <div class="box-section__image">
                <picture>
                    <source
                        srcset="/assets/about/mobile/image-about-hero.jpg"
                        media="(max-width: 43.75rem)"
                    />
                    <source
                        srcset="/assets/about/tablet/image-about-hero.jpg"
                        media="(max-width: 75rem)"
                    />
                    <img
                        class="box-section__image__img"
                        src="/assets/about/desktop/image-about-hero.jpg"
                        alt="People around a table, working together"
                    />
                </picture>
            </div>
            <div class="box-section__info about-us__info">
                <h1 class="font-h1">About Us</h1>
                <p class="font-secondary">
                    Founded in 2010, we are a creative agency that produces
                    lasting results for our clients. We’ve partnered with many
                    startups, corporations, and nonprofits alike to craft
                    designs that make real impact. We’re always looking forward
                    to creating brands, products, and digital experiences that
                    connect with our clients’ audiences.
                </p>
            </div>
        </div>
    </header>
    <section class="box-section">
        <div class="box-section__wrapper talent bg-secondary">
            <div class="box-section__image">
                <picture>
                    <source
                        srcset="/assets/about/mobile/image-world-class-talent.jpg"
                        media="(max-width: 43.75rem)"
                    />
                    <source
                        srcset="/assets/about/tablet/image-world-class-talent.jpg"
                        media="(max-width: 75rem)"
                    />
                    <img
                        class="box-section__image__img"
                        src="/assets/about/desktop/image-world-class-talent.jpg"
                        alt="People around a table, working together"
                    />
                </picture>
            </div>
            <div class="box-section__info">
                <h2 class="font-h2 foreground-primary">World-class talent</h2>
                <p class="font-secondary">
                    We are a crew of strategists, problem-solvers, and
                    technologists. Every design is thoughtfully crafted from
                    concept to launch, ensuring success in its given market. We
                    are constantly updating our skills in a myriad of platforms. <br
                    /><br />
                    Our team is multi-disciplinary and we are not merely interested
                    in form — content and meaning are just as important. We give
                    great importance to craftsmanship, service, and prompt delivery.
                    Clients have always been impressed with our high-quality outcomes
                    that encapsulates their brand’s story and mission.
                </p>
            </div>
        </div>
    </section>
    <section class="location bg-leaf">
        {
            locations.map((location) => (
                <div class="location__wrapper">
                    <div class="location__img bg-circle">
                        <Image src={location.img} alt="Canada illustration" />
                    </div>
                    <p class="font-h3">{location.name}</p>
                    <Button href={location.href} variant="primary">
                        See Location
                    </Button>
                </div>
            ))
        }
    </section>
    <section class="box-section">
        <div class="box-section__wrapper deal bg-secondary">
            <div class="box-section__image">
                <picture>
                    <source
                        srcset="/assets/about/mobile/image-real-deal.jpg"
                        media="(max-width: 43.75rem)"
                    />
                    <source
                        srcset="/assets/about/tablet/image-real-deal.jpg"
                        media="(max-width: 75rem)"
                    />
                    <img
                        class="box-section__image__img"
                        src="/assets/about/desktop/image-real-deal.jpg"
                        alt="People around a table, working together"
                    />
                </picture>
            </div>
            <div class="box-section__info">
                <h2 class="font-h2 foreground-primary">The real deal</h2>
                <p class="font-secondary">
                    As strategic partners in our clients’ businesses, we are
                    ready to take on any challenge as our own. Solving real
                    problems require empathy and collaboration, and we strive to
                    bring a fresh perspective to every opportunity. We make
                    design and technology more accessible and give you tools to
                    measure success.
                    <br /><br />
                    We are visual storytellers in appealing and captivating ways.
                    By combining business and marketing strategies, we inspire audiences
                    to take action and drive real results.
                </p>
            </div>
        </div>
    </section>
    <ContactCTA />
</Layout>
<style lang="scss">
    .box-section {
        &:not(.header) {
            margin-bottom: 7.5rem;
        }
        &__wrapper {
            overflow: hidden;
        }
        &__image__img {
            width: 100%;
            height: auto;
        }
        &__info {
            padding-inline: var(--space-lateral);
            padding-block: 5rem;
            text-align: center;
            font-style: normal;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 1.5rem;
        }
    }
    .about-us {
        background-image: url('/assets/about/mobile/bg-pattern-hero-about-mobile.svg');
        background-repeat: no-repeat;
        background-position: top -75% right;
    }
    .deal,
    .talent {
        background-image: url('/assets/shared/desktop/bg-pattern-three-circles.svg');
        background-repeat: no-repeat;
        background-position: bottom -40px left;
    }
    .location {
        margin-bottom: 7.5rem;
        padding-inline: var(--space-lateral);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 3rem;
        &__wrapper {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            width: 100%;
            align-items: center;
            justify-content: center;
            text-align: center;
            &:nth-child(1) .bg-circle::before {
                transform: rotate(0deg);
            }
            &:nth-child(2) .bg-circle::before {
                transform: rotate(-90deg);
            }
            &:nth-child(3) .bg-circle::before {
                transform: rotate(180deg);
            }
        }
        &__img {
            width: 100%;
            height: auto;
            margin-bottom: 1rem;
            position: relative;
            max-width: 202px;
            & img {
                width: 100%;
                height: auto;
            }
        }
    }
    @media (min-width: 43.75rem) {
        .box-section {
            padding-inline: var(--space-lateral);
            margin-bottom: 7.5rem;
            &__wrapper {
                border-radius: 15px;
            }
            &__info {
                padding: 4rem 3.625rem;
                gap: 2rem;
            }
        }
        .about-us {
            background-image: url('/assets/about/desktop/bg-pattern-hero-about-desktop.svg');
            background-repeat: no-repeat;
            background-position: top -110px left -120px;
        }
        .deal,
        .talent {
            background-position: bottom 44px right 10px;
        }
        .location {
            row-gap: 5rem;
        }
    }
    @media (min-width: 75rem) {
        .box-section {
            margin-bottom: 10rem;
            &__wrapper {
                display: flex;
                align-items: stretch;
                &.talent {
                    flex-direction: row;
                }
                &.about-us,
                &.deal {
                    flex-direction: row-reverse;
                }
            }
            &__image {
                flex: 1 1 28.125rem;
                &__img {
                    height: 100%;
                    object-fit: cover;
                    object-position: center;
                }
            }
            &__info {
                flex: 1 1 38.125rem;
                text-align: left;
                align-items: flex-start;
                padding-inline: 5.625rem;
            }
        }
        .about-us {
            background-position: bottom left;
        }
        .talent {
            background-position: bottom right 197px;
        }
        .deal {
            background-image: url('/assets/shared/desktop/bg-pattern-two-circles.svg');
            background-position: bottom left;
        }
        .location {
            flex-direction: row;
            justify-content: space-between;
            column-gap: 1.875rem;
            margin-bottom: 10rem;
            position: relative;
        }
        .header.bg-leaf::after {
            top: 70%;
            left: 0;
        }
        .location.bg-leaf::after {
            top: 50%;
            right: -396px;
        }
    }
</style>
