---
interface Props {
    title: string;
}

import '@fontsource/jost/400.css';
import '@fontsource/jost/500.css';
import '@style/style.scss';
const { title } = Astro.props;
import Navbar from '@src/components/sections/shared/Navbar.astro';
import Footer from '@src/components/sections/shared/Footer.astro';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        <!-- Favicons -->
        <link
            rel="icon"
            type="image/png"
            href="/favicon-96x96.png"
            sizes="96x96"
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <meta name="apple-mobile-web-app-title" content="designo" />
        <link rel="manifest" href="/site.webmanifest" />
        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://designo.valenzuela.dev/" />
        <meta property="og:title" content="Designo - Creative Agency by MV" />
        <meta
            property="og:description"
            content="Designo is a creative agency that specializes in branding, web design, and development. We create stunning visual and digital experiences for your brand."
        />
        <meta
            property="og:image"
            content="https://designo.valenzuela.dev/assets/og-image.png"
        />
        <meta
            property="og:image:alt"
            content="Designo - Creative Agency by MV"
        />
        <meta property="og:image:type" content="image/jpeg" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:locale" content="en_US" />
        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content="https://designo.valenzuela.dev/" />
        <meta name="twitter:title" content="Designo - Creative Agency by MV" />
        <meta
            name="twitter:description"
            content="Designo is a creative agency that specializes in branding, web design, and development. We create stunning visual and digital experiences for your brand."
        />
        <meta
            name="twitter:image"
            content="https://designo.valenzuela.dev/assets/og-image.png"
        />
        <meta
            name="twitter:image:alt"
            content="Designo - Creative Agency by MV"
        />
        <!-- General Meta Tags -->
        <meta
            name="description"
            content="Designo is a creative agency that specializes in branding, web design, and development. We create stunning visual and digital experiences for your brand."
        />
        <meta
            name="keywords"
            content="designo, creative agency, branding, web design, web development, digital experiences"
        />
        <meta name="author" content="MV" />
        <title>{title}</title>
    </head>
    <body class="body">
        <Navbar />
        <slot />
        <Footer />
    </body>
</html>
<style lang="scss">
    .body {
        width: clamp(18.75rem, 100%, 90rem);
        margin-inline: auto;
        font-family: 'Jost', sans-serif;
        background-color: var(--color-white);
    }
</style>
