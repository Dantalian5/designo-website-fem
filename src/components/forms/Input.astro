---
import type { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'input'> {
    textfield?: boolean;
    name: string;
    label: string;
}
const { textfield = false, name, label, ...props } = Astro.props;
---

<label class="input">
    <span class="input__label">{label}</span>
    {
        !textfield ? (
            <input name={name} {...props} class="input__input" />
        ) : (
            <textarea name={name} {...props} />
        )
    }
</label>
<style lang="scss">
    .input {
        margin: 2rem;
        display: flex;
        border-bottom: 1px solid;
        border-color: var(--color-white);
    }
</style>
