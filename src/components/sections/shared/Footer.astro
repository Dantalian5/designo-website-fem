---
import { Image } from 'astro:assets';
import Logo from '@src/assets/shared/logo-light.png';
import SvgFem from '@src/components/svg/SvgFem.astro';
import SvgWeb from '@src/components/svg/SvgWeb.astro';
import SvgGithub from '@src/components/svg/SvgGithub.astro';
import SvgLinkedin from '@src/components/svg/SvgLinkedin.astro';
---

<footer class="footer">
    <div class="footer__top">
        <Image class="footer__logo" src={Logo} alt="Designo Logo" />
        <span class="footer__divider"></span>
        <nav class="footer__nav">
            <ul class="footer__nav__list">
                <li class="footer__nav__item">
                    <a href="/about" class="footer__nav__link">Our Company</a>
                </li>
                <li class="footer__nav__item">
                    <a href="/location" class="footer__nav__link">Locations</a>
                </li>
                <li class="footer__nav__item">
                    <a href="/contact" class="footer__nav__link">Contact</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="footer__bottom">
        <p class="footer__info">
            Designo Central Office <br /><span
                >3886 Wellington Street <br /> Toronto, Ontario M9C 3J5</span
            >
        </p>
        <p class="footer__info">
            Contact Us (Central Office) <br /><span
                >P : +1 253-863-8967 <br /> M : contact@designo.co</span
            >
        </p>
        <nav class="footer__socials">
            <ul class="footer__socials__list">
                <li class="footer__socials__item">
                    <a
                        href="https://github.com/Dantalian5"
                        aria-label="Github"
                        title="Github"
                        class="footer__socials__link"><SvgGithub /></a
                    >
                </li>
                <li class="footer__socials__item">
                    <a
                        href="https://www.linkedin.com/in/marcos-valenzuela-dev/"
                        aria-label="Linkedin"
                        title="Linkedin"
                        class="footer__socials__link"><SvgLinkedin /></a
                    >
                </li>
                <li class="footer__socials__item">
                    <a
                        href="https://www.frontendmentor.io/profile/Dantalian5"
                        aria-label="FrontendMentor"
                        title="FrontendMentor"
                        class="footer__socials__link"><SvgFem /></a
                    >
                </li>
                <li class="footer__socials__item">
                    <a
                        href="https://valenzuela.dev"
                        aria-label="Portfolio"
                        title="Portfolio"
                        class="footer__socials__link"><SvgWeb /></a
                    >
                </li>
            </ul>
        </nav>
    </div>
</footer>
<style lang="scss">
    .footer {
        padding-inline: var(--space-lateral);
        padding-block: 4rem;
        background-color: var(--color-black);
        &__top {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 2rem;
            margin-bottom: 2.5rem;
        }
        &__logo {
            width: 12.625rem;
            height: auto;
        }
        &__divider {
            width: 100%;
            height: 1px;
            background-color: var(--color-white);
            opacity: 0.1;
        }
        &__nav {
            width: fit-content;
            &__list {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                gap: 2rem;
            }
            &__item {
                list-style: none;
            }
            &__link {
                color: var(--color-white);
                font-size: 0.875rem;
                font-style: normal;
                font-weight: 400;
                line-height: 1; /* 100% */
                letter-spacing: 2px;
                text-transform: uppercase;
                &:hover {
                    text-decoration-line: underline;
                    text-decoration-style: solid;
                    text-decoration-skip-ink: none;
                    text-decoration-thickness: 0.5px;
                    text-underline-offset: auto;
                    text-underline-position: from-font;
                }
            }
        }
        &__bottom {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 2.5rem;
        }
        &__info {
            width: fit-content;
            color: var(--color-white);
            text-align: center;
            font-size: 1rem;
            font-style: normal;
            font-weight: 700;
            line-height: 1.62; /* 162.5% */
            opacity: 0.5;
            & span {
                font-weight: 400;
            }
        }
        &__socials {
            width: fit-content;
            &__list {
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 1.5rem;
            }
            &__item {
                list-style: none;
            }
            &__link {
                display: block;
                width: fit-content;
                height: fit-content;
                color: var(--color-primary);
                font-size: 1.5rem;
                &:hover {
                    transform: scale(1.1);
                    color: var(--color-secondary);
                }
            }
        }
    }
    @media (min-width: 43.75rem) {
        .footer {
            padding-block: 5rem;
            &__top {
                flex-direction: row;
                flex-wrap: wrap;
                justify-content: space-between;
                gap: 2.5rem;
            }
            &__divider {
                order: 3;
            }
            &__nav {
                &__list {
                    flex-direction: row;
                    gap: 2.625rem;
                }
            }
            &__bottom {
                flex-direction: row;
                justify-content: space-between;
                gap: 2rem;
            }
            &__info {
                text-align: left;
            }
            &__socials {
                align-self: flex-end;
            }
        }
    }
</style>
